<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Double x:Key="FontSizeSmaller">10</system:Double>
    <system:Double x:Key="FontSizeSmall">12</system:Double>
    <system:Double x:Key="FontSizeRegular">14</system:Double>
    <system:Double x:Key="FontSizeLarge">20</system:Double>
    <system:Double x:Key="FontSizeXLarge">24</system:Double>
    <system:Double x:Key="FontSizeXXLarge">30</system:Double>

    <FontFamily x:Key="RobotoBlack">/Resources/Fonts/#Roboto Bk</FontFamily>
    <FontFamily x:Key="FontAwesome">/Resources/Fonts/#FontAwesome</FontFamily>
    <FontFamily x:Key="RobotoMedium">/Resources/Fonts/#Roboto Medium</FontFamily>
    <FontFamily x:Key="RobotoLight">/Resources/Fonts/#Roboto Light</FontFamily>
    <FontFamily x:Key="RobotoBold">/Resources/Fonts/#Roboto</FontFamily>
</ResourceDictionary>