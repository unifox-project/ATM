<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <!-- default background color -->
    <Color x:Key="WindowBackground">White</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackground}"></SolidColorBrush>

    <SolidColorBrush x:Key="PageBackgroundColor" Color="#FCFCFC"></SolidColorBrush>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="#FFFFFF"></SolidColorBrush>
    <SolidColorBrush x:Key="ButtonDisableForegroundColor" Color="#ADADAD"></SolidColorBrush>
    <SolidColorBrush x:Key="TextBlockGreyForegroundColor" Color="#5E5E5E"></SolidColorBrush>
    <SolidColorBrush x:Key="TextBlockBlueForegroundColor" Color="#3578C2"></SolidColorBrush>


</ResourceDictionary>